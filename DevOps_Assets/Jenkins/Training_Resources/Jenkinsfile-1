pipeline{
    agent {
        label 'AGENT-1'
    }
    options{
        timeout(time: 1, unit: 'SECONDS')
    }
    stages{
        stage('test'){
            steps {
                echo "heloo jenkins pipeline job"
            }
        }
        stage('sleep stage'){
